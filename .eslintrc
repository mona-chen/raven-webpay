
{
"root": true,
"extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended", "prettier",   "plugin:@typescript-eslint/recommended", "prettier"
],
"plugins": [
  "@typescript-eslint",
  "prettier",
  "react",
  "react-hooks"
],
"rules": {
  "react-hooks/rules-of-hooks": "error",
  "react-hooks/exhaustive-deps": "warn",
  "no-unused-vars": "off",
  "semi": 0,
  "react/react-in-jsx-scope": "off",
  "@typescript-eslint/no-non-null-assertion": "off",
  "@typescript-eslint/ban-ts-comment": "off",
  "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
  "@typescript-eslint/no-explicit-any": "off"
},
"settings": {
  "react": {
    "version": "detect"
  }
},
"env": {
  "browser": true,
  "node": true,
  "es6": true
},
"globals": {
  "JSX": true
}
}